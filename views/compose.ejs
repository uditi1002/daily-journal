<%- include("partials/header") -%>

<h1>Compose</h1>

<form method="post" action="/compose">
    <div class="form-group">
        <label for="composeTitle">Title</label>
        <input type="text" class="form-control" id="composeTitle" name="composeTitle">
    </div>
    <div class="form-group">
        <label for="composePost">Post</label>
        <textarea class="form-control" id="composePost" name="composePost" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>