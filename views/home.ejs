<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= value1%></p>

<div>
    <% otherValues.forEach( (post) =>{%>
        <div>
            <h1> <%= post.title %></h1>
        </div>
        <% if (post.content.length > 100){ %>
            <p> <%= post.content.slice(0,100) + "..." %> <a href= "/posts/<%= post._id %>">Read More</a> </p>
        <% } else { %>
            <p> <%= post.content %> <a href= "/posts/<%= post._id %>">Read More</a> </p>
        <% } %>
        
    <% }) %> 
</div>

<%- include("partials/footer") -%>